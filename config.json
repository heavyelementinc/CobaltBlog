{
    "plugin": "CobaltBlog",
    "name": "Cobalt Blog",
    "cobalt_version": "^0.2",
    "description": "A simple markdown blog using Cobalt's Database Driver",
    "js-packages": [
        "CobaltBlog-webcomponents.js"
    ],
    "css-packages": [
        "CobaltBlog.css"
    ],
    "settings": {
        "CobaltBlog_public_path": {
            "default": "/blog"
        },
        "CobaltBlog_admin_path": {
            "default": "/blog"
        },
        "CobaltBlog_update_path": {
            "default": "/blog"
        },
        "CobaltBlog_public_name": {
            "default": "Blog"
        },
        "CobaltBlog_navigation_groups": {
            "default": [
                "main_navigation"
            ]
        },
        "CobaltBlog_collection_name": {
            "default": "CobaltBlog"
        },
        "CobaltBlog_index_limit": {
            "default": 5
        },
        "CobaltBlog_main_index_title": {
            "default": "Blog Home"
        }
    },
    "permissions": {
        "CobaltBlog_allow_editing": {
            "group": "Blog",
            "label": "Allowed to post new and edit existing blog posts",
            "dangerous": false,
            "default": false
        }
    }
}